          <% if user_signed_in? %>
          <li><%= link_to "My Lounge", user_exercises_path(current_user) %></li>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
            <div class="navbar-right">
              <p class="navbar-text">
                Signed in as <%= "#{current_user.email}" %>
              </p>
